wordpress:
    cli:
        source: https://raw.githubusercontent.com/wp-cli/builds/gh-pages/phar/wp-cli.phar
        hash:  https://raw.githubusercontent.com/wp-cli/builds/gh-pages/phar/wp-cli.phar.sha512
    sites:
        sitenameA.com:
            username: siteAuser
            password: siteApass
            database: siteAdb
            dbhost: localhost
            dbuser: siteAdbuser
            dbpass: siteAdbpass
            url: http://siteA.com
            title: 'siteA title'
            email: siteA@email.com
            connection_user: dbadminuser
            connection_pass: dbadminpass
        sitenameB.com:
            username: siteBuser
            password: siteBpass
            database: siteBdb
            dbhost: localhost
            dbuser: siteBdbuser
            dbpass: siteBdbpass
            url: http://siteB.com
            title: 'siteB title'
            email: siteB@email.com
            connection_user: dbadminuser
            connection_pass: dbadminpass
    lookup:
        docroot: /var/html           
